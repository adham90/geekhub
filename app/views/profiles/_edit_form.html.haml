= simple_form_for(@profile, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :username, required: true
    = f.input :name, required: true, autofocus: true
    = f.input :phone, required: true
    = f.input :age, required: true
    = f.input :avatar
    = f.input :bio
    = f.input :gender
  .form-actions
    = f.button :submit
