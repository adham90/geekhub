- @profile = Profile.new
- @profile.build_user
.panel.panel-default
  = render partial: 'profiles/new_form', object: @profile

:scss
  body {
    background-image: url("/images/landing-page-img.jpg");
    height: 100%;
  }
  main, html{
    height: 100%;
  }
  .panel{
    background-color:rgba(255,255,255,0.9);
    margin: auto;
    position: absolute;
    top: 45%;
    left: 0; bottom: 0; right: 0;
    transform:      translateY(-50%);
    width: 600px;
    height: auto;
    padding: 10px;
  }
