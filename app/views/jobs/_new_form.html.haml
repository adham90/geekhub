= simple_form_for(@job) do |f|
  = f.error_notification

  .form-inputs
    = f.input :company_name, :url => autocomplete_company_name_jobs_path, :as => :autocomplete, input_html: { class: "form-control" }
    = f.input :title_id, collection: Title.all,value_method: :id , label_method: :name, label: "Title", include_blank: false
    = f.input :description, required: true, autofocus: true
    = f.input :currently_work
  .form-actions
    = f.button :submit,"Add", class: "btn btn-success btn-lg btn-block"