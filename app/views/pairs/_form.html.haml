= simple_form_for(pair, remote: true) do |f|
  = f.error_notification

  .form-inputs
    = f.input :pair_date, as: :string, class:"form-control"
    = f.input :pair_time, as: :string, input_html: {"data-mask" => "99:99"}
    = f.input :navigator_id,  as: :hidden
    = f.input :address
    = f.input :address_details
    = f.input :details
    = f.input :type
  .modal-footer
    .form-actions
      %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
      = f.button :submit, 'Send pair request', class: "btn btn-primary"
