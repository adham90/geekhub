!!!
%html{"ng-app" => "app"}
  %head
    %title= "#{content_for?(:title) ? yield(:title) : 'Rails Devise'} - GEEKHUB.IO"
    = include_gon
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    %script{:src => "https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"}
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %main{:role => "main"}
      = render 'layouts/navigation' unless current_page?(signup_path)
      = render 'layouts/messages' unless current_page?(root_path)
      = yield
