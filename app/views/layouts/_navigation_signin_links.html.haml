    = image_tag(current_user.profile.avatar.url(:thumb), class: "navbar-profile-img")

%li.nav-line{"data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Settings"}
  %a{:href => "#{edit_profiles_path}"}
    %span.ion-android-settings

%li.nav-line{"data-placement" => "bottom", "data-toggle" => "tooltip", :title => "SignOut"}
  %a{:href => "#{destroy_user_session_path}"}
    %span.ion-log-out
