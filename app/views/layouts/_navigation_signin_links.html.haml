%li.nav-user{:role => "presentation"}
  %a{:href => "#{show_profile_path(current_user.profile.username)}"}
    = current_user.profile.first_name
    = image_tag(current_user.profile.avatar.url(:thumb), class: "navbar-profile-img")
%li.dropdown.nav-line{:role => "presentation", "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Pair Requests"}
  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
    %span.ion-code
  %ul.dropdown-menu{:role => "menu"}
    =render 'layouts/notification'

%li.dropdown.nav-line{:role => "presentation", "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Notifications"}
  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
    %span.ion-android-notifications-none
  %ul.dropdown-menu{:role => "menu"}
    =render 'layouts/notification'

%li.dropdown.nav-line{:role => "presentation", "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Settings"}
  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
    %span.ion-android-settings
  %ul.dropdown-menu{:role => "menu"}
    %li= link_to 'Edit account', edit_user_registration_path
    %li= link_to 'Edit profile', edit_profiles_path
    %li= link_to 'Sign out', destroy_user_session_path, :method=>'get'